class Carro {
  constructor(marca, modelo, ano) {
    this.marca = marca;
    this.modelo = modelo;
    this.ano = ano;
    this.velocidade = 0;
  }

  acelerar(valor) {
    this.velocidade += valor;
    console.log(`O carro acelerou para ${this.velocidade} km/h`);
  }

  frear(valor) {
    this.velocidade = Math.max(0, this.velocidade - valor);
    console.log(`O carro reduziu para ${this.velocidade} km/h`);
  }

  info() {
    console.log(`Carro: ${this.marca} ${this.modelo} (${this.ano})`);
  }
}
const meuCarro = new Carro("Honda", "Civic", 2023);

meuCarro.acelerar(30);
meuCarro.frear(10);
meuCarro.info();




class Carro {
  constructor(marca, cor, combustivel) {
    this.marca = marca;
    this.cor = cor;
    this.combustivel = combustivel;
  }

  info() {
    console.log(`Marca: ${this.marca}`);
    console.log(`Cor: ${this.cor}`);
    console.log(`Combustível: ${this.combustivel}`);
  }
}
const carro1 = new Carro("Toyota", "Vermelho", "Gasolina");
carro1.info();




class Carro {
  constructor(marca, cor, combustivel) {
    this.marca = marca;
    this.cor = cor;
    this.combustivel = combustivel;
  }

  verificarMarca() {
    return `A marca do carro é ${this.marca}`;
  }

  verificarCor() {
    return `A cor do carro é ${this.cor}`;
  }
}
const carro1 = new Carro("Ford", "Azul", "Etanol");

console.log(carro1.verificarMarca());
console.log(carro1.verificarCor());