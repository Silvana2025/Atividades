  bark() {
    console.log(`Woof! My name is ${this.name}.`);
  }
}

const dog = new Dog("Lion");

dog.bark();




class Car {
  constructor(modelo) {
    this.modelo = modelo;
  }

  iniciar() {
    console.log(`O carro ${this.modelo} iniciou.`);
  }

  parar() {
    console.log(`O carro ${this.modelo} parou.`);
  }
}

const carro = new Car("Golf");

carro.iniciar();
carro.parar();




class BankAccount {
  constructor(owner) {
    this.owner = owner;
    this.saldo = 0;
  }

  depositar(valor) {
    if (valor > 0) {
      this.saldo += valor;
    } else {
      console.log("O valor do depósito deve ser positivo.");
    }
  }

  mostrarSaldo() {
    console.log(`Saldo atual: ${this.saldo}`);
  }
}

const conta = new BankAccount("João");


conta.depositar(200);
conta.mostrarSaldo(); 
conta.depositar(-50); 



class User {
  constructor(username) {
    this.username = username;
  }

  login() {
    console.log(`Usuário ${this.username} fez login com sucesso.`);
  }

  logout() {
    console.log(`Usuário ${this.username} fez logout.`);
  }
}

const user = new User("silvana2525");


user.login();
user.logout();




class Aluno {
  constructor(nome) {
    this.nome = nome;
  }
}

class Curso {
  constructor(titulo) {
    this.titulo = titulo;
  }
}

const aluno = new Aluno("Silvana");
const curso = new Curso("Programação");

console.log(`${aluno.nome} matriculada em ${curso.titulo}`);



class Timer {
  constructor(segundos) {
    this.segundos = segundos;
  }

  tick() {
    if (this.segundos > 0) {
      this.segundos -= 1;
    }
  }

  show() {
    console.log(`Tempo restante: ${this.segundos} segundos`);
  }
}

const timer = new Timer(20);


timer.show();
timer.tick();
timer.show(); 




