class Person {
  constructor(nome) {
    this.nome = nome;
  }
}

class Employee extends Person {
  constructor(nome, salario) {
    super(nome); 
    this.salario = salario;
  }
}

const emp = new Employee("Silvana", 5000);

console.log(emp.nome);    
console.log(emp.salario); 




