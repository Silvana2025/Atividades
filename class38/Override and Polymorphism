class Veiculo {
  mover() {
    console.log("O veículo está se movendo.");
  }
}

class Carro extends Veiculo {
  mover() {
    console.log("O carro está dirigindo pela estrada.");
  }
}

class Bicicleta extends Veiculo {
  mover() {
    console.log("A bicicleta está pedalando pelo parque.");
  }
}

const meuCarro = new Carro();
const minhaBicicleta = new Bicicleta();

meuCarro.mover();      
minhaBicicleta.mover(); 




class Employee {
  constructor(nome) {
    this.nome = nome;
  }

  exibir() {
    console.log(`Nome: ${this.nome}`);
  }
}

class Manager extends Employee {
  constructor(nome, departamento) {
    super(nome); 
    this.departamento = departamento;
  }

  exibir() {
    console.log(`Nome: ${this.nome}, Departamento: ${this.departamento}`);
  }
}

const gerente = new Manager("Silvana", "Financeiro");

gerente.exibir(); 



class Account {
  status() {
    console.log("Conta padrão.");
  }
}

class PremiumAccount extends Account {
  constructor(isActive) {
    super();
    this.isActive = isActive;
  }

  status() {
    if (this.isActive) {
      console.log("Conta premium ativa!");
    } else {
      console.log("Conta premium inativa.");
    }
  }
}

const premium1 = new PremiumAccount(true);
const premium2 = new PremiumAccount(false);

premium1.status(); 
premium2.status(); 



class Animal {
  info() {
    console.log("Este é um animal.");
  }
}

class Dog extends Animal {
  info() {
    console.log("Este é um cachorro.");
  }

  fetch() {
    console.log("O cachorro está buscando a bola.");
  }
}

const dog = new Dog();

dog.info();  
dog.fetch(); 



class Instrument {
  play() {
    console.log("Tocando um instrumento genérico.");
  }
}

class Guitar extends Instrument {
  play() {
    console.log("Tocando a guitarra.");
  }
}

class Piano extends Instrument {
  play() {
    console.log("Tocando o piano.");
  }
}

const guitarra = new Guitar();
const piano = new Piano();

const instrumentos = [guitarra, piano];


instrumentos.forEach(inst => inst.play());




class User {
  constructor(username) {
    this.username = username;
  }

  describe() {
    console.log(`Usuário: ${this.username}`);
  }
}

class Admin extends User {
  constructor(username, role) {
    super(username);
    this.role = role;
  }

  describe() {
    super.describe(); 
    console.log(`Função: ${this.role}`);
  }

  banUser(user) {
    console.log(`${user.username} foi banido pelo administrador ${this.username}.`);
  }
}

const admin = new Admin("Silvana", "Analista Admin");
const user = new User("Luis");


admin.describe();

admin.banUser(user); 













