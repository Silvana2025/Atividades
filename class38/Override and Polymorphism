class Pessoa {
  constructor(nome) {
    this.nome = nome;
  }

  sayHello() {
    console.log(`Olá, meu nome é ${this.nome}.`);
  }
}

const pessoa1 = new Pessoa("Silvana");

pessoa1.sayHello();




class Book {
  constructor(titulo, autor) {
    this.titulo = titulo;
    this.autor = autor;
  }

  info() {
    console.log(`O livro ${this.titulo} foi escrito por ${this.autor}.`);
  }
}

const livro1 = new Book("Dom Casmurro", "Machado de Assis");

livro1.info();




class Counter {
  constructor(start) {
    this.value = start;
  }

  increment() {
    this.value += 1;
  }

  show() {
    console.log(this.value);
  }
}

const counter = new Counter(4);

counter.increment();
counter.show(); 




class Light {
  constructor(isOn) {
    this.isOn = isOn;
  }

  toggle() {
    this.isOn = !this.isOn;
  }

  status() {
    console.log(
      `A luz está ${this.isOn ? "ligada" : "desligada"}.`
    );
  }
}

const light = new Light(false);

light.status();
light.toggle();
light.status(); 




